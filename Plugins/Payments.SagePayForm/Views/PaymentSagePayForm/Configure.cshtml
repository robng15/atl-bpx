@{
    Layout = "";
}
@model ConfigurationModel
@using Nop.Plugin.Payments.SagePayForm.Models;
@using Nop.Web.Framework;
@Html.Action("StoreScopeConfiguration", "Setting", new { area = "Admin" })


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="panel-group">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.UseSandbox_OverrideForStore, model => model.UseSandbox, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.UseSandbox)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.UseSandbox)
                        @Html.ValidationMessageFor(model => model.UseSandbox)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.VendorName_OverrideForStore, model => model.VendorName, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.VendorName)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.VendorName)
                        @Html.ValidationMessageFor(model => model.VendorName)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.EncryptedPassword_OverrideForStore, model => model.EncryptedPassword, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.EncryptedPassword)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.EncryptedPassword)
                        @Html.ValidationMessageFor(model => model.EncryptedPassword)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.LiveURL_OverrideForStore, model => model.LiveURL, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.LiveURL)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.LiveURL)
                        @Html.ValidationMessageFor(model => model.LiveURL)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.TestURL_OverrideForStore, model => model.TestURL, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.TestURL)
                    </div>
                    <div class="col-md-9">
                        @Html.NopEditorFor(model => model.TestURL)
                        @Html.ValidationMessageFor(model => model.TestURL)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.ApplyAVSCV2_OverrideForStore, model => model.ApplyAVSCV2, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.ApplyAVSCV2Values)
                    </div>
                    <div class="col-md-9">
                        @Html.NopDropDownList("ApplyAVSCV2", Model.ApplyAVSCV2Values)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        @Html.OverrideStoreCheckboxFor(model => model.Apply3DSecure_OverrideForStore, model => model.Apply3DSecure, Model.ActiveStoreScopeConfiguration)
                        @Html.NopLabelFor(model => model.Apply3DSecureValues)
                    </div>
                    <div class="col-md-9">
                        @Html.NopDropDownList("Apply3DSecure", Model.Apply3DSecureValues)
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-3">
                        &nbsp;
                    </div>
                    <div class="col-md-9">
                        <input type="submit" name="save" class="btn bg-blue" value="@T("Admin.Common.Save")" />
                    </div>
                </div>
            </div>
        </div>
    </div>



}
